{% extends './dashboard/base.html.twig' %}

{% block title %}
	Your Forms
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-header">
			<div class="row">
				<div class="col-md-8">
					Forms
				</div>
				<div class="col-md-4 text-right">
					<a href="{{ path('app_forms_create') }}" class="btn btn-sm btn-primary">Create new form</a>
				</div>
			</div>
		</div>
		<div class="card-body">
			<table class="table table-bordered table-striped datatables">
				<thead>
					<tr>
						<th>#</th>
						<th>Title</th>
						<th>Actions</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script src="{{ asset('dashboard/js/pages/forms.js') }}"></script>
{% endblock %}
