{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<section class="mt-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="row d-md-flex">
						<div class="col-6 login-preview">
							<img src="{{ asset('images/blueprint.jpg') }}" width="450px" height="450px"/>
						</div>
						<div class="col-6 p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign In</h3>
								</div>
							</div>
							{% for flash_error in app.flashes %}
								<div class="alert alert-danger" role="alert">{{ flash_error.0 }}</div>
							{% endfor %}

							{{ form_start(form) }}
							{{ form_row(form.email) }}
							{{ form_row(form.password) }}
							{{ form_row(form.submit) }}
							{{ form_end(form) }}
							<p class="text-center">Not a member?
								<a data-toggle="tab" href="{{ path('app_register') }}">Sign Up</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
