{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<header class="masthead">
		<div class="container px-5">
			<div class="row gx-5 align-items-center">
				<div
					class="col-lg-6">
					<!-- Mashead text and app badges-->
					<div class="mb-5 mb-lg-0 text-center text-lg-start">
						<h1 class="display-1 lh-1 mb-3">Create and Manage Forms Effortlessly.</h1>
						<p class="lead fw-normal text-muted mb-5">Streamline your form creation process with Formulator, a free and open-source form builder. Easily manage form submissions and settings with our user-friendly interface!</p>
					</div>
				</div>
				<div
					class="col-lg-6">
					<!-- Masthead device mockup feature-->
					<div class="masthead-device-mockup">
						<svg class="circle" viewbox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
							<defs>
								<linearGradient id="circleGradient" gradienttransform="rotate(45)">
									<stop class="gradient-start-color" offset="0%"></stop>
									<stop class="gradient-end-color" offset="100%"></stop>
								</linearGradient>
							</defs>
							<circle cx="50" cy="50" r="50"></circle>
						</svg>
						<svg class="shape-1 d-none d-sm-block" viewbox="0 0 240.83 240.83" xmlns="http://www.w3.org/2000/svg">
							<rect x="-32.54" y="78.39" width="305.92" height="84.05" rx="42.03" transform="translate(120.42 -49.88) rotate(45)"></rect>
							<rect x="-32.54" y="78.39" width="305.92" height="84.05" rx="42.03" transform="translate(-49.88 120.42) rotate(-45)"></rect>
						</svg>
						<svg class="shape-2 d-none d-sm-block" viewbox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
							<circle cx="50" cy="50" r="50"></circle>
						</svg>
					</div>
				</div>
			</div>
		</div>
	</header>

	<aside class="text-center bg-gradient-primary-to-secondary">
		<div class="container px-5">
			<div class="row gx-5 justify-content-center">
				<div class="col-xl-8">
					<div class="h2 fs-1 text-white mb-4">"Formulator is a symfony project enables users to create and manage self-serve forms similar to Google Forms. It provides a user-friendly interface for form creation, sharing, and response collection"</div>
				</div>
			</div>
		</div>
	</aside>

	<section id="features">
		<div class="container px-5">
			<div class="row gx-5 align-items-center">
				<div class="col-lg-8 order-lg-1 mb-5 mb-lg-0">
					<div class="container-fluid px-5">
						<div class="row">
							<div
								class="col-md-6 mb-5 mb-md-0">
								<!-- Feature item-->
								<div class="text-center">
									<i class="bi-pencil-square icon-feature text-gradient d-block mb-3"></i>
									<h3 class="font-alt">Form Management</h3>
									<p class="text-muted mb-0">Create, read, update, and delete forms with ease.</p>
								</div>
							</div>
							<div
								class="col-md-6">
								<!-- Feature item-->
								<div class="text-center">
									<i class="bi-gear icon-feature text-gradient d-block mb-3"></i>
									<h3 class="font-alt">Form Settings</h3>
									<p class="text-muted mb-0">Set expiration dates and redirections after form submission.</p>
								</div>
							</div>
						</div>
						<div class="row">
							<div
								class="col-md-6 mb-5 mb-md-0">
								<!-- Feature item-->
								<div class="text-center">
									<i class="bi-input-cursor-text icon-feature text-gradient d-block mb-3"></i>
									<h3 class="font-alt">Versatile Input Types</h3>
									<p class="text-muted mb-0">Supports input field, paragraph, single choice, multiple choice, date picker, time picker, and file upload.</p>
								</div>
							</div>
							<div
								class="col-md-6">
								<!-- Feature item-->
								<div class="text-center">
									<i class="bi-file-earmark-text icon-feature text-gradient d-block mb-3"></i>
									<h3 class="font-alt">Submission Details</h3>
									<p class="text-muted mb-0">View detailed information about each submission including IP address and device agent.</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4 order-lg-0">
					<div class="features-device-mockup">
						<svg class="circle" viewbox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
							<defs>
								<linearGradient id="circleGradient" gradienttransform="rotate(45)">
									<stop class="gradient-start-color" offset="0%"></stop>
									<stop class="gradient-end-color" offset="100%"></stop>
								</linearGradient>
							</defs>
							<circle cx="50" cy="50" r="50"></circle>
						</svg>
						<svg class="shape-1 d-none d-sm-block" viewbox="0 0 240.83 240.83" xmlns="http://www.w3.org/2000/svg">
							<rect x="-32.54" y="78.39" width="305.92" height="84.05" rx="42.03" transform="translate(120.42 -49.88) rotate(45)"></rect>
							<rect x="-32.54" y="78.39" width="305.92" height="84.05" rx="42.03" transform="translate(-49.88 120.42) rotate(-45)"></rect>
						</svg>
						<svg class="shape-2 d-none d-sm-block" viewbox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
							<circle cx="50" cy="50" r="50"></circle>
						</svg>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
